{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-memory.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-logger.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "lc-essentials@lc-marketplace": true
  },
  "extraKnownMarketplaces": {
    "lc-marketplace": {
      "source": {
        "source": "directory",
        "path": "marketplace/"
      }
    }
  }
}
